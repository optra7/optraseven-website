# ─── Start by Ignoring Everything ───────────────────────────────
app/public/**

# ─── Allow Only Top-Level Files in app/public ───────────────────
!app/public/*.php
!app/public/.htaccess
!app/public/favicon.ico
!app/public/index.html
!app/public/robots.txt

# ─── Allow wp-admin Directory ───────────────────────────────────
#!app/public/wp-admin/
#!app/public/wp-admin/**

# ─── Allow wp-content/themes/index.php ──────────────────────────
!app/public/wp-content/
!app/public/wp-content/themes/
!app/public/wp-content/themes/index.php

# ─── Allow Custom Theme ─────────────────────────────────────────
!app/public/wp-content/themes/optraseven-website-theme/
!app/public/wp-content/themes/optraseven-website-theme/**

# ─── Still Ignore Everything Else ───────────────────────────────
# (e.g., uploads, plugins, cache, backups, etc.)
app/public/wp-includes/
app/public/wp-content/uploads/
app/public/wp-content/plugins/
app/public/wp-content/cache/
app/public/wp-content/upgrade/
app/public/wp-content/backups-*/

